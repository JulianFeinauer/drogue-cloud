{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "properties": {
    "image": {
      "type": [
        "null",
        "object"
      ],
      "properties": {
        "repository": {
          "type": "string",
          "description": "The URL of the container repository to use",
          "default": "ghcr.io/drogue-iot"
        }
      }
    },
    "knativeChannel": {
      "type": "string",
      "description": "The name of the device payload ingress Knative channel",
      "default": "iot-channel"
    },
    "knativeEventingNamespace": {
      "type": "string",
      "description": "The namespace of the Knative eventing installation",
      "default": "knative-eventing"
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "loadBalancer": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "routes": {
      "type": "object",
      "description": "Settings for OpenShift routes",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    }
  },
  "required": [
    "knativeChannel",
    "knativeEventingNamespace"
  ]
}