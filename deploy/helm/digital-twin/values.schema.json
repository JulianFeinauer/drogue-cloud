{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "properties": {
    "platform": {
      "description": "Kubernetes platform to deploy to",
      "type": "string",
      "enum": ["kubernetes", "openshift"]
    },

    "image": {
      "type": [ "null", "object" ],
      "properties": {
        "repository": {
          "type": "string",
          "description": "The URL of the container repository to use",
          "default": "ghcr.io/drogue-iot"
        }
      }
    },

    "knativeChannel": {
      "type": "string",
      "description": "The name of the device payload ingress Knative channel",
      "default": "iot-channel"
    }
  },

  "required": ["platform", "knativeChannel"]
}